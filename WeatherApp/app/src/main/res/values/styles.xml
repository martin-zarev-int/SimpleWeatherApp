<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecyclerViewData" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecyclerViewMainData" parent="RecyclerViewData">
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">@dimen/main_text_size_rv</item>
    </style>

    <style name="RecyclerViewAdditionalData" parent="RecyclerViewData">
        <item name="android:alpha">0.54</item>
        <item name="android:textSize">@dimen/additional_text_size_rv</item>
    </style>

</resources>
